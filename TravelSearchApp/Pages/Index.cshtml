@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Travel Search</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* General Styling */
        body {
            font-family: 'Poppins', sans-serif;
            background: #121212;
            color: #e0e0e0;
            margin: 0;
            padding: 0;
        }

        .container {
            padding: 40px 15px;
        }

        h1, h2 {
            color: #00e676;
            text-shadow: 0 3px 8px rgba(0, 230, 118, 0.5);
        }

        /* Fancy Search Form */
        .search-card {
            background: #1f1f1f;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.8);
            max-width: 800px;
            margin: 0 auto;
        }

        .form-label {
            color: #00e676;
            font-weight: bold;
        }

        .form-control, .form-select {
            background: #292929;
            color: #e0e0e0;
            border: 1px solid #444;
            border-radius: 10px;
        }

            .form-control:focus, .form-select:focus {
                border-color: #00e676;
                box-shadow: 0 0 5px #00e676;
            }

        .btn-primary {
            background-color: #00e676;
            border: none;
            padding: 12px 20px;
            font-size: 1rem;
            font-weight: bold;
            color: #121212;
            border-radius: 10px;
            transition: all 0.3s ease-in-out;
        }

            .btn-primary:hover {
                background-color: #00c853;
                transform: scale(1.05);
            }

        /* Results Section */
        .results-section h2 {
            margin-top: 40px;
            text-align: center;
        }

        .result-card {
            background: #1f1f1f;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            color: #e0e0e0;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.7);
            transition: all 0.3s ease-in-out;
        }

            .result-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 30px rgba(0, 230, 118, 0.5);
            }

        .result-details {
            flex: 1;
            margin-right: 15px;
        }

        .result-card h5 {
            color: #00e676;
            margin-bottom: 10px;
            font-size: 1.2rem;
        }

        .no-results {
            text-align: center;
            margin-top: 30px;
            font-size: 1.2rem;
            color: #f44336;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header -->
        <h1 class="text-center mb-5">Discover Your Next Adventure</h1>

        <!-- Search Card -->
        <div class="search-card">
            <form method="post" action="/Travel/Index" class="row g-3">
                <!-- Origin -->
                <div class="col-lg-4">
                    <label for="origin" class="form-label">Origin</label>
                    <select id="origin" name="origin" class="form-select" required>
                        <option value="" disabled selected>Select your origin</option>
                        <option value="JFK">New York City (JFK)</option>
                        <option value="LAX">Los Angeles (LAX)</option>
                        <option value="LHR">London (LHR)</option>
                        <option value="NRT">Tokyo (NRT)</option>
                        <option value="SYD">Sydney (SYD)</option>
                    </select>
                </div>

                <!-- Number of Nights -->
                <div class="col-lg-4">
                    <label for="nights" class="form-label">Number of Nights</label>
                    <input id="nights" name="nights" type="number" min="1" class="form-control" placeholder="Enter nights" required>
                </div>

                <!-- Budget -->
                <div class="col-lg-4">
                    <label for="budget" class="form-label">Budget ($)</label>
                    <input id="budget" name="budget" type="number" min="1" class="form-control" placeholder="Enter budget" required>
                </div>

                <!-- Search Button -->
                <div class="col-12 text-center">
                    <button type="submit" class="btn btn-primary">Search Now</button>
                </div>
            </form>
        </div>

        <!-- Results Section -->
        <div class="results-section">
            @if (ViewData["Trips"] != null && ((List<TravelSearchApp.Models.TripResult>)ViewData["Trips"]).Count > 0)
            {
                <h2>Results</h2>
                <div class="row">
                    @foreach (var trip in (List<TravelSearchApp.Models.TripResult>)ViewData["Trips"])
                    {
                        <div class="col-lg-6">
                            <div class="result-card">
                                <div class="result-details">
                                    <h5>@trip.Flight.to</h5>
                                    <p><strong>Flight Price:</strong> $@trip.Flight.price</p>
                                    <p><strong>Hotel:</strong> @trip.Hotel.name</p>
                                    <p><strong>Hotel Price/Night:</strong> $@trip.Hotel.price_per_night</p>
                                    <p><strong>Total Cost:</strong> $@trip.TotalCost</p>
                                    <p><strong>Score:</strong> @trip.Score</p>
                                </div>
                                <div>
                                    <a href="#" class="btn btn-primary">Book</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else if (ViewData["Trips"] != null)
            {
                <div class="no-results">
                    No trips found. Try adjusting your budget or nights.
                </div>
            }
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
